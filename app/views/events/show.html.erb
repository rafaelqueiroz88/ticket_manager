<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <%= image_tag @event.avatar.url(:thumb) %>
</p>

<% if admin_signed_in? %>
  <%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<% if person_signed_in? %>
  <%= link_to 'Comprar ingresso', new_ticket_path(:event => @event) %> |
<% end %>

<%= link_to 'Back', events_path %>