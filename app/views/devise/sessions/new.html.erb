<br />
<div class="row card">
    <br />
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "col s4") do |f| %>
        <div class="row">
            <div class="input-field col s4 offset-s2">
                <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
                <%= f.label :email %>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s4 offset-s2">
                <%= f.text_field :password, autocomplete: "current-password" %>
                <%= f.label :password %>
            </div>
        </div>
        <div class="row">
            
                <% if devise_mapping.rememberable? %>
                    <p>
                        <label>
                            <%= f.check_box :remember_me %>
                            <% # = f.span :remember_me %>
                            <span>Lembrar-me</span>
                        </label>
                    </p>
                <% end %>
            
            <div class="input-field col s3">
                <%= f.submit "Log in" %>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <%= render "devise/shared/links" %>
            </div>
        </div>
    <% end %>
</div>